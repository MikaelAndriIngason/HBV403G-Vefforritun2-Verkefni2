<section class="events">
  <h2 class="events__title">Viðburðir á næstunni</h2>
  <ul class="events__list">
    <% for (const event of events) { %>
      <li class="events__event">
        <a href="/<%= event.slug %>" class="events__eventLink"><%= event.name %></a>
        <p class="events__eventDescription"><%= event.description %></p>
        <!--<div class="events__eventDetails">
          <p ><%= event.location %></p>
          <a href="<%= event.url %>"> <%= event.url %></a>
        </div>-->
        <% if (admin) { %>
          <p class="events_eventActionButtons">
            <a href="/admin/<%= event.slug %>" class="events__eventEdit">Uppfæra viðburð</a>
            <a href="/admin/delete/<%= event.slug %>" class="events__eventEdit">Eyða viðburð</a></p>
        <% } %>
      </li>
    <% } %>
  </ul>
</section>
